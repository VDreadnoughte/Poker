#include <iostream> // библиотека для вывода
#include <string> // библиотека для работы со строками
#include <ctime> // библиотека с функцией времени для параметра к генератору псевдорандомных чисел
#include <cstdlib> // библиотека для генерации рандомных чисел
using namespace std; // пространство имён std

class PlayingCard // класс карт
{
	public: //доступ public
	static string SUITS_LIST[4]; //         статические
	static string RANK_LIST[13]; // поля SUITS_LIST и RANK_LIST
};

string PlayingCard::SUITS_LIST[] = {"Пики", "Бубны", "Черви", "Трефы"};                               //   инициализация
string PlayingCard::RANK_LIST[] = {"Т", "2", "3", "4", "5", "6", "7", "8", "9", "10", "В", "Д", "К"}; // статических полей

int main() // главная функция
{
	setlocale(0,""); // нормальное отображение русских символов
	srand(time(NULL)); //зависимость псевдорандомных чисел от времени
	int n; // количество игроков
	while(true) // цикл для проверки ввода количества игроков
	{
		cin>>n; // ввод количества игроков с консоли
		if(n == 0) // условие
		{
			cout<<"Игра окончена."<<endl; // вывод текста в консоль
			break; // прервать цикл
		}
		else if(n<0) // иначе если
		{
			cout<<"Число игроков не может быть меньше 0"<<endl; // вывод текста в консоль
			continue; // продолжить выполнение цикла сначала
		}
		if(n*5 <= 4*13) // условие
			break; // прервать цикл
		else // иначе
			cout<<"Слишком много игроков!"<<endl; // вывод текста в консоль
	}
	string *deck = new string[13*4]; // колода карт
	for (int i = 0; i < 13; i++) // параметрический цикл
		for (int j = 0; j < 4; j++) // параметрический цикл
			deck[4*i + j] = PlayingCard::RANK_LIST[i] + " " + PlayingCard::SUITS_LIST[j]; // заполнение колоды
	for (int i = 0; i < 13*4; i++) // цикл для перетасовки карт
	{
		int r = i + (int)((double)(1/rand()%100) * (13*4-i)); // выбор рандомной карты
		string temp = deck[r]; // сохранить рандомную карту
		deck[r] = deck[i]; //  Поменять карты
		deck[i] = temp;    //     местами
	}
	for (int i = 0; i < n * 5; i++) // цикл для раздачи карт игрокам
	{
		cout<<deck[i]<<ends; // вывод карты в консоль
		if (i % 5 == 5 - 1) // если игрок получил карты
			cout<<endl<<endl; // вывод двух символов конца строки в консоль
	}
}
